extends main

block style
  !=css("/css/style.css")
  !=css("/css/dashboard.css")

block scripts
  !=js("/scripts/dashboard")

block content
  div.dashboardCtn
        div#sidebar.row-fluid.fill-height.left.bold
          div.fill-width.color-two.content-right
            img#logo(src="/img/logo.png")
          div#userInfoCtn
            p#login(align="right") #{login}
            p#dashboard(align="right")= t('app.Dashboard.Dashboard')
          div#optionController.fill-width
            ul#optionList
              li#friendsRoomOpt.options
                div.option-wrapper.centerVertically
                  i.icon-th-large
                  = t('app.Dashboard.Rooms')
              li#friendsListOpt.options
                div.option-wrapper.centerVertically
                  i.icon-group
                  = t('app.Dashboard.Friends')
              li#settingsOpt.options
                div.option-wrapper.centerVertically
                  i.icon-cog
                  = t('app.Dashboard.Settings')
        div#content.color-one
          div.frame
            include dashboardRooms
            include dashboardFriends
            include dashboardSettings
