div#settingsContent.content.row-fluid.fill-height.white
	i.icon-cog.bigFont
	span.title.bigFont.bold.italic= t('app.Dashboard.SettingTab.Title')
	div.settingBox
		p.title.titleSection.bigFont.bold email address
		p.bigFont Current email address :
			span.bold &nbsp;jacket@horsehead.hm
		form
			input.block(type="text", name="newMail", placeholder="New email address")
			button.btn.btn-join.bold update my email
	div.settingBox
		p.title.titleSection.bigFont.bold password
		p.bigFont updated :
			span.bold 2 months ago - 31 Aug. 2013
		form
			input#password.block(type="text", placeholder="New password")
			input#passwordConfirm.block(type="text", placeholder="Confirm the new password")
			button.btn.btn-join.bold update my password
